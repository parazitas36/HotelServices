

@page "{id:min(1)}"
@model WorkerProfileEditModel
@{
    ViewData["Title"] = "Redagavimas";
}
@{
    Layout = "_LayoutWorker";
}
<h1>Edit</h1>

<form method="post" class="mt-3">
    @*Use hidden input elements to store employee id which
        we need when we submit the form*@


    @*asp-for tag helper takes care of displaying the existing
        data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="Employee.Name" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Employee.Name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Employee.Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Employee.Surname" class="form-control" placeholder="Email">
        </div>
    </div>
        <div class="form-group row">
            <label asp-for="Employee.Birth" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Employee.Birth" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="Submit" asp-page-handler="Submit" />
                <a asp-page="/Employees/Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>
</form>