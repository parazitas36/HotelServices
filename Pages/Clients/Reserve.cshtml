@page
@model ReserveModel
@{
    ViewData["Title"] = "Kambario rezervacija";
}
@{
   Layout = "_LayoutClient";
}


<div class="text-center">
    <h1 class="display-4">Kambario rezervacijos forma</h1>
    <center>
        <form method="post" style="width:50%;">
            <div class="form-group">
                <h5>Pasirinkite laiką, kurį norite rezervuoti</h5>
                <h5 style="color:red">@Model.ERROR</h5>
                <div>
                    <div class="col-sm-4">
                        <label for="datefrom">Nuo:</label>
                        <input type="date" name="start" required />
                    </div>
                    <div class="col-sm-4">
                        <label for="datetill">Iki:</label>
                        <input type="date" name="end" required />
                    </div>
                </div>
                <input type="submit" value="Rezervuoti" name="submit" />
            </div>
        </form>
    </center>
</div>
